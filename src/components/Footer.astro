---
import { contacts, services, serviceAreas, quickLinks, socialLinks, bottomBar  } from '../data/footer.js';
---

<footer class="text-gray-300 pt-20 pb-10 px-6 md:px-12 border-t-4 border-brand-orange relative overflow-hidden" 
        style="background: linear-gradient(135deg, #0C0000 0%, rgba(245, 134, 0, 1) 100%);">

      <!-- Background shapes -->
      <div class="absolute inset-0 opacity-10">
        <div class="absolute top-10 left-10 w-20 h-20 border-2 border-brand-orange rounded-full"></div>
        <div class="absolute top-32 right-20 w-32 h-32 border border-brand-orange rounded-full"></div>
        <div class="absolute bottom-20 left-1/4 w-16 h-16 border-2 border-brand-orange rounded-full"></div>
      </div>

  <div class="relative z-10 max-w-7xl mx-auto grid grid-cols-1 md:grid-cols-4 gap-12 text-sm">
    
    <!-- Contact Us -->
<div class="space-y-6">
  <h4 class="text-white font-black text-lg mb-4 relative">
    Contact Us
    <div class="absolute -bottom-1 left-0 w-16 h-1 bg-gradient-to-r from-brand-orange to-brand-orange-hover rounded-full"></div>
  </h4>
  <ul class="space-y-4">
    {contacts.map(contact => (
      <li class="flex items-start group hover:translate-x-1 transition-transform duration-200">
        <div class="w-10 h-10 rounded-lg flex items-center justify-center mr-3 shadow-md bg-gradient-to-br from-brand-orange to-brand-orange-hover flex-shrink-0">
          <span class="material-icons text-white text-lg">{contact.icon}</span>
        </div>
        <div class="flex-1">
          <p class="font-semibold text-white text-sm">{contact.value}</p>
          <p class="text-xs text-gray-400">{contact.subtitle}</p>
        </div>
      </li>
    ))}
  </ul>
</div>


    <!-- Services -->
    <div class="space-y-6">
      <h4 class="text-white font-black text-xl mb-6 relative">Services
        <div class="absolute -bottom-2 left-0 w-20 h-1 bg-gradient-to-r from-brand-orange to-brand-orange-hover rounded-full"></div>
      </h4>
      <ul class="space-y-3">
        {services.map(service => (
          <li>
            <a href={service.url} class="flex items-center hover:text-brand-orange transition-all duration-300">
              <span class="material-icons text-brand-orange text-lg mr-3">{service.icon}</span>
              <span class="font-medium">{service.name}</span>
            </a>
          </li>
        ))}
      </ul>
    </div>

    <!-- Service Areas -->
    <div class="space-y-6">
      <h4 class="text-white font-black text-xl mb-6 relative">Service Areas
        <div class="absolute -bottom-2 left-0 w-24 h-1 bg-gradient-to-r from-brand-orange to-brand-orange-hover rounded-full"></div>
      </h4>
      <ul class="space-y-3">
        {serviceAreas.map(area => (
          <li class="flex items-center hover:text-brand-orange transition-all duration-300">
            <span class="material-icons text-brand-orange text-sm mr-2">location_on</span>
            <a href="/service-areas" class="text-white font-medium hover:text-brand-orange">{area}</a>
          </li>
        ))}
      </ul>
    </div>

    <!-- Quick Links & Social -->
    <div class="space-y-6">
      <h4 class="text-white font-black text-xl mb-6 relative">Quick Links
        <div class="absolute -bottom-2 left-0 w-16 h-1 bg-gradient-to-r from-brand-orange to-brand-orange-hover rounded-full"></div>
      </h4>
      <ul class="space-y-3 mb-8">
        {quickLinks.map(link => (
          <li>
            <a href={link.url} class="flex items-center hover:text-brand-orange transition-all duration-300">
              <span class="material-icons text-brand-orange text-lg mr-3">{link.icon}</span>
              <span class="font-medium">{link.name}</span>
            </a>
          </li>
        ))}
      </ul>

      <!-- Social Links (inline) -->
      <div>
        <h5 class="text-white font-bold text-lg mb-4">Follow Us</h5>
        <div class="flex gap-4">
          {socialLinks.map(social => (
            <a href={social.url} target="_blank" class="group w-12 h-12 bg-gradient-to-br from-brand-orange to-brand-orange-hover rounded-xl flex items-center justify-center shadow-lg hover:shadow-xl hover:scale-110 transition-all duration-300">
              <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                <path d={social.icon}></path>
              </svg>
            </a>
          ))}
        </div>
      </div>
    </div>
  </div>

  <!-- Bottom Bar -->
  <div class="relative z-10 mt-16 pt-8 border-t-2 border-brand-orange/30 text-center">
    <div class="flex flex-col items-center gap-4">

      <!-- Made with ❤️ by Company -->
      <div class="flex items-center gap-2 justify-center">
        <span class="text-gray-200">{bottomBar.madeWith.text}</span>
        <span class="text-red-500 animate-bounce text-xl">{bottomBar.madeWith.heart}</span>
        <span class="text-gray-200">{bottomBar.madeWith.byText}</span>
        <a 
          href={bottomBar.madeWith.company.url} 
          target="_blank" 
          class="bg-gradient-to-r from-brand-orange to-brand-orange-hover bg-clip-text text-transparent font-bold"
        >
          {bottomBar.madeWith.company.name}
        </a>
      </div>

      <!-- Copyright -->
      <p class="text-gray-300 font-medium">{bottomBar.copyright}</p>

      <!-- Footer Links -->
      <div class="flex flex-wrap items-center justify-center gap-6 text-sm mt-4">
        {bottomBar.links.map(link => (
          <a href={link.url} class="text-gray-200 hover:text-brand-orange">
            {link.name}
          </a>
        ))}
      </div>

    </div>
  </div>
</footer>
