---
// Header.astro
import { logo, navLinks, callInfo, bookServiceLink } from '../data/header.js';
const { currentPage } = Astro.props;
---

<nav class="bg-white shadow-xl fixed top-0 w-full z-50 border-b-2 border-brand-orange/20">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-20 items-center">

      <!-- Logo (dynamic) -->
      <div class="flex-shrink-0">
        <a href={logo.link} class="flex items-center group">
          <img 
            src={logo.src} 
            alt={logo.alt}
            class={`w-${logo.width} h-${logo.height} object-contain rounded-xl group-hover:scale-105 transition-all duration-300 shadow-lg group-hover:shadow-xl`} 
          />
        </a>
      </div>

      <!-- Desktop Menu -->
      <div class="hidden lg:flex space-x-8 items-center">
        {navLinks.map(link => (
          <a href={link.url} class={`nav-link ${currentPage === link.name ? 'bg-brand-orange-light text-brand-orange' : ''}`}>
            {link.name}
          </a>
        ))}

        <div class="flex items-center space-x-3 ml-4">
          <a 
            href={`tel:${callInfo.phone}`}
            class="flex items-center space-x-1 bg-gradient-to-r from-brand-orange to-brand-orange-hover text-white px-6 py-3 rounded-xl font-semibold hover:shadow-lg hover:scale-105 transition-all duration-300 animate-glow"
          >
            <span class="material-icons">call</span>
            <span>Call {callInfo.display}</span>
          </a>
          <a 
            href={bookServiceLink}
            class="flex items-center space-x-1 border-2 border-brand-orange text-brand-orange px-6 py-3 rounded-xl font-semibold hover:bg-brand-orange hover:text-white hover:shadow-lg hover:scale-105 transition-all duration-300"
          >
            <span class="material-icons">schedule</span>
            <span>Book Service</span>
          </a>
        </div>
      </div>

      <!-- Mobile Menu Button -->
      <div class="lg:hidden flex items-center justify-end w-full space-x-2">
        <a href={`tel:${callInfo.phone}`} class="flex items-center space-x-1 bg-gradient-to-r from-brand-orange to-brand-orange-hover text-white px-3 py-2 rounded-lg font-semibold shadow-lg text-sm">
          <span class="material-icons text-base">call</span>
          <span>Call</span>
        </a>
        <a href={bookServiceLink} class="flex items-center space-x-1 border-2 border-brand-orange text-brand-orange px-3 py-2 rounded-lg font-semibold text-sm">
          <span class="material-icons text-base">schedule</span>
          <span>Book</span>
        </a>
        <button 
          id="mobile-menu-button"
          class="text-gray-700 hover:text-brand-orange focus:outline-none p-2 rounded-lg hover:bg-brand-orange-light transition-colors duration-300"
          aria-label="Open menu"
        >
          <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden lg:hidden bg-white border-t border-brand-orange/20 shadow-xl">
    <div class="px-4 py-4 space-y-2">
      {navLinks.map(link => (
        <a href={link.url} class="mobile-link">
          <span class="material-icons mr-3">{link.icon}</span>{link.name}
        </a>
      ))}
      <div class="pt-4 space-y-3">
        <a href={`tel:${callInfo.phone}`} class="flex items-center justify-center space-x-2 bg-gradient-to-r from-brand-orange to-brand-orange-hover text-white py-3 rounded-xl font-semibold shadow-lg">
          <span class="material-icons">call</span>
          <span>Call {callInfo.display}</span>
        </a>
        <a href={bookServiceLink} class="flex items-center justify-center space-x-2 border-2 border-brand-orange text-brand-orange py-3 rounded-xl font-semibold">
          <span class="material-icons">schedule</span>
          <span>Book Service</span>
        </a>
      </div>
    </div>
  </div>
</nav>

<style>
  @reference "../styles/global.css";

  .nav-link {
    @apply text-gray-700 hover:text-brand-orange font-semibold py-2 px-2 rounded-lg hover:bg-brand-orange-light transition-all duration-300;
  }

  .mobile-link {
    @apply flex items-center px-3 py-3 text-gray-700 hover:bg-brand-orange-light hover:text-brand-orange rounded-lg transition-all duration-200;
  }
</style>

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  if (mobileMenuButton && mobileMenu) {
    mobileMenuButton.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
  }
</script>
